# ==========================================
# MCP分布式爬虫系统 - 环境变量配置模板
# ==========================================
# 请复制此文件为 .env 并填入实际值
# 重要：切勿将包含真实API密钥的.env文件提交到版本控制！

# ==========================================
# AI模型配置
# ==========================================
MODEL=Qwen/Qwen3-30B-A3B
BASE_URL=https://api.siliconflow.cn/v1
OPENAI_API_KEY=your-openai-api-key-here
VISUAL_MODEL=Pro/Qwen/Qwen2.5-VL-7B-Instruct

# ==========================================
# 搜索API配置
# ==========================================
SERPAPI_API_KEY=your-serpapi-key-here

# ==========================================
# Redis配置
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# ==========================================
# MongoDB配置（可选）
# ==========================================
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=distributed_crawler
MONGODB_MAX_POOL_SIZE=100

# ==========================================
# MySQL配置（可选）
# ==========================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=crawler
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=crawler_db

# ==========================================
# Tor代理配置（反爬虫功能）
# ==========================================
USE_TOR=true
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_PASSWORD=your-tor-password
TOR_EXECUTABLE_PATH=/path/to/tor/tor.exe

# ==========================================
# 监控配置
# ==========================================
MONITORING_HOST=0.0.0.0
MONITORING_PORT=8080
MONITORING_METRICS_INTERVAL=5

# ==========================================
# 日志配置
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/crawler.log

# ==========================================
# 工作节点配置
# ==========================================
WORKER_MAX_CONCURRENT_TASKS=50
WORKER_HEARTBEAT_INTERVAL=30
WORKER_TASK_TIMEOUT=300
WORKER_RETRY_TIMES=3

# ==========================================
# 调度器配置
# ==========================================
SCHEDULER_CHECK_INTERVAL=10
SCHEDULER_MAX_WORKERS=100
SCHEDULER_LOAD_BALANCE=true

# ==========================================
# 结果收集器配置
# ==========================================
COLLECTOR_BUFFER_SIZE=1000
COLLECTOR_FLUSH_INTERVAL=10
COLLECTOR_STORAGE_TYPE=mongodb

# ==========================================
# 安全配置
# ==========================================
SECRET_KEY=your-secret-key-here
API_TOKEN=your-api-token-here

# ==========================================
# 环境配置
# ==========================================
ENV=development
DEBUG=true

# ==========================================
# 爬虫配置
# ==========================================
SCRAPER_COOKIES=

# ==========================================
# 系统提示词配置
# ==========================================
# 可选值: general, dfd, technical, business, academic, news
# general: 通用网页内容分析 (默认)
# dfd: 数据流图专业分析
# technical: 技术文档分析
# business: 商业内容分析
# academic: 学术研究分析
# news: 新闻资讯分析
SYSTEM_PROMPT_TYPE=dfd

# ==========================================
# 网页去重系统配置
# ==========================================
# 是否启用URL去重 (true/false)
ENABLE_URL_DEDUP=true
# 是否启用内容去重 (true/false)
ENABLE_CONTENT_DEDUP=true
# URL缓存天数
URL_CACHE_DAYS=30
# 内容相似度阈值 (0.0-1.0，越高越严格)
CONTENT_SIMILARITY_THRESHOLD=0.85

# ==========================================
# 特定平台配置
# ==========================================
# 知乎配置
ZHIHU_USERNAME=your-zhihu-username
ZHIHU_PASSWORD=your-zhihu-password

# 其他平台配置...
# PLATFORM_USERNAME=your-username
# PLATFORM_PASSWORD=your-password