# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=distributed_crawler
MONGODB_MAX_POOL_SIZE=100

# MySQL Configuration (optional)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=crawler
MYSQL_PASSWORD=password
MYSQL_DATABASE=crawler_db

# Monitoring Configuration
MONITORING_HOST=0.0.0.0
MONITORING_PORT=8080
MONITORING_METRICS_INTERVAL=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/crawler.log

# Worker Configuration
WORKER_MAX_CONCURRENT_TASKS=50
WORKER_HEARTBEAT_INTERVAL=30
WORKER_TASK_TIMEOUT=300
WORKER_RETRY_TIMES=3

# Scheduler Configuration
SCHEDULER_CHECK_INTERVAL=10
SCHEDULER_MAX_WORKERS=100
SCHEDULER_LOAD_BALANCE=true

# Result Collector Configuration
COLLECTOR_BUFFER_SIZE=1000
COLLECTOR_FLUSH_INTERVAL=10
COLLECTOR_STORAGE_TYPE=mongodb

# Security Configuration
SECRET_KEY=your-secret-key-here
API_TOKEN=your-api-token-here

# Environment
ENV=development
DEBUG=true